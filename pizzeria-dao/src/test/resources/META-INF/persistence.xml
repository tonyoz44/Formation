<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="pizzeria-po" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
         <class>fr.pizzeria.model.Pizza</class>
         <class>fr.pizzeria.model.Commande</class>
        <class>fr.pizzeria.model.Client</class>
         <class>fr.pizzeria.model.Livreur</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:testdb"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            
            <!-- <property name="hibernate.show_sql" value="true"/> -->
            
            <!-- <property name="hibernate.physical_naming_strategy" value="fr.pizzeria.hibernate.ImprovedNamingStrategy"/> -->
        </properties>
    </persistence-unit>
</persistence>